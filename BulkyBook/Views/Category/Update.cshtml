@model Category


<div class="card mb-3">
    <h1 class="card-header">Update Category</h1>
    <div class="card-body">
        <form class="w-100" asp-controller="Category" asp-action="Update">
            <input asp-for="CategoryId" hidden />
            <div class="mb-2">
                <label asp-for="CategoryName" class="form-text text-primary"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span class="text-danger" asp-validation-for="CategoryName"></span>
            </div>
            <div class="mb-2">
                <label asp-for="DisplayOrder" class="form-text text-primary"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span class="text-danger" asp-validation-for="DisplayOrder"></span>
            </div>

            <div class="btn-group mb-2" role="group">
                <button type="submit" class="btn btn-warning m-2">Update</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary m-2">Category List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}