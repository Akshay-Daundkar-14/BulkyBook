@model Category


<div class="card mb-3">
    <h1 class="card-header">Delete Category</h1>
    <div class="card-body">
        <form class="w-100" asp-controller="Category" asp-action="Delete">
            <input asp-for="CategoryId" hidden/>
            <div class="mb-2">
                <label asp-for="CategoryName" class="form-text text-primary"></label>
                <input disabled readonly asp-for="CategoryName" class="form-control" />
            </div>
            <div class="mb-2">
                <label asp-for="DisplayOrder" class="form-text text-primary"></label>
                <input disabled readonly  asp-for="DisplayOrder" class="form-control" />
            </div>

            <div class="btn-group mb-2" role="group">
                <button type="submit" class="btn btn-danger m-2">Delete</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary m-2">Category List</a>
            </div>
        </form>
    </div>
</div>
